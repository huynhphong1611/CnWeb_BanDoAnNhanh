
@{
    ViewBag.Title = "LoginAdminLayout";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="/Content/css/style.css" type="text/css" media="all" />
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <div class="login p-4 mx-auto HienForm">
        <h5 class="text-center mb-4">CHÀO MỪNG TRỞ LẠI</h5>
        <form action="@Url.Action("Login","Home")" method="post">
            <div class="form-group">
                <label>Tên đăng nhập:</label>
                <input type="text" class="form-control" name="TenDangNhap" placeholder="" required="">
            </div>
            <div class="form-group">
                <label class="mb-2">Mật khẩu:</label>
                <input type="password" class="form-control" name="MatKhau" placeholder="" required="">
            </div>
            <button type="submit" id="btn-DangNhap" class="btn submit mb-4">Đăng nhập</button>

        </form>
    </div>
</body>
</html>
