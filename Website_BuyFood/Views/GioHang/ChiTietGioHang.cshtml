@model List<Website_BuyFood.ViewModel.ThongTinTungMon>
<div class="content">
    <div class="module">
        <div class="module-head">
            <h3 style="margin-bottom: 10px;">Giỏ hàng của bạn:</h3>

        </div>
        <div class="module-body">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Tên vật phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenMon</td>
                            <td><a href="#">@item.SoLuong</a></td>
                            <td>@item.DonGia</td>
                            <td><a href="#">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="module-head">
            <h3></h3>
        </div>
    </div>
    <br />
</div>
