@model List<Website_BuyFood.Models.MonAn>
@for (int i = 0; i < Model.Count; i++)
{
    if ((i + 1) % 3 == 1)
    {
        <div class="col-md-4 Mon">
            <div class="gallery-demo">
                <a href="#@Model[i].MaMon">
                    <img src="/Content/images/@Model[i].LinkAnh" alt=" " class="img-fluid" />
                    <h4 class="p-mask">@Model[i].TenMon - <span>@String.Format("{0:0,0 vnđ}", Model[i].DonGia)</span></h4>
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-4 mt-md-0 mt-4 Mon">
            <div class="gallery-demo">
                <a href="#@Model[i].MaMon">
                    <img src="/Content/images/@Model[i].LinkAnh" alt=" " class="img-fluid" />
                    <h4 class="p-mask">@Model[i].TenMon - <span>@String.Format("{0:0,0 vnđ}", Model[i].DonGia)</span></h4>
                </a>
            </div>
        </div>
    }

}
